<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                app:cardPreventCornerOverlap="false"
                android:layout_weight="2.75">

                <ImageView
                    android:id="@+id/content_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1.25"
                app:cardCornerRadius="3dp"
                app:cardPreventCornerOverlap="false">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:paddingTop="13dp"
                        android:id="@+id/content_year"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="end"
                        android:layout_weight="0.25"
                        android:paddingEnd="13dp"
                        android:paddingRight="13dp"
                        android:text="1906"
                        android:textColor="@color/brightBlue"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="280dp"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:layout_gravity="center"
                        android:background="#000000" />

                    <TextView
                        android:id="@+id/content_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.30"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Img title goes here"
                        android:textColor="@color/brightPurple"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/content_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.70"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLength="200"
                        android:maxLines="4"
                        android:text="Description of img goes here. Lorem Ipsum dolor sin amet"
                        android:textColor="@color/brightPurple"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/expanded_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/expanded_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>