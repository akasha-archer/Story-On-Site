<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/highline3"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/rectangle"
        android:layout_margin="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:background="#99FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sos_small_house_purple"
                android:tint="@color/retro_brown" />

            <ImageView
                android:id="@+id/storyIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/logoIV"
                android:layout_alignTop="@+id/logoIV"
                android:layout_toRightOf="@id/logoIV"
                android:src="@drawable/sos_logotype_purple"
                android:tint="@color/retro_brown" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:backgroundTint="@color/retro_teal"
            android:id="@+id/video_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:id="@+id/video_button_create"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_button_cream"
                    android:padding="@dimen/img_bttn_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_retrovideo" />

                <TextView
                    android:id="@+id/share_video_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/video_button_create"
                    android:layout_toRightOf="@id/video_button_create"
                    android:gravity="center"
                    android:text="Share a video"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/share_text_size" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:backgroundTint="@color/retro_teal"
            android:id="@+id/picture_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:id="@+id/camera_button_create"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_button_cream"
                    android:padding="@dimen/img_bttn_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_retrocamera" />

                <TextView
                    android:id="@+id/share_photo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/camera_button_create"
                    android:layout_toRightOf="@id/camera_button_create"
                    android:gravity="center"
                    android:text="Share a photo"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/share_text_size" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:backgroundTint="@color/retro_teal"
            android:id="@+id/upload_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/pic_image_create"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_button_cream"
                    android:padding="@dimen/img_bttn_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_polaroids" />

                <TextView
                    android:id="@+id/upload_photo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/pic_image_create"
                    android:layout_toRightOf="@id/pic_image_create"
                    android:gravity="center"
                    android:text="Upload a photo"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/share_text_size" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>