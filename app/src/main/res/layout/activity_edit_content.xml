<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryDark"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/preview_portrait_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" />

            <VideoView
                android:id="@+id/preview_videoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" />

        </FrameLayout>

        <EditText
            android:id="@+id/location_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/location_name"
            android:inputType="textImeMultiLine|textCapSentences"
            android:textColor="@color/white_text"
            android:textColorHint="@color/teal_accent" />

        <EditText
            android:id="@+id/user_story_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/addstory_edittext_hint"
            android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/white_text"
            android:textColorHint="@color/teal_accent"
            android:textSize="16dp" />

    </LinearLayout>


</android.support.v7.widget.CardView>
