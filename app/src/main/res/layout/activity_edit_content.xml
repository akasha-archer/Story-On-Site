<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/testingGry"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.75">

            <ImageView
                android:id="@+id/preview_portrait_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" />

            <VideoView
                android:id="@+id/preview_videoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/location_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/location_name"
            android:inputType="textImeMultiLine|textCapSentences"
            android:textColor="@color/retro_brown"
            android:textColorHint="@color/brightBlue" />

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:alpha="0.12"
            android:background="#000000" />

        <EditText
            android:id="@+id/user_story_edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/addstory_edittext_hint"
            android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@color/retro_brown"
            android:textColorHint="@color/brightBlue"
            android:textSize="16sp" />


    </LinearLayout>


</android.support.v7.widget.CardView>
