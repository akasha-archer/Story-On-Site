<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginInTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/bgtest</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primaryMedium</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/teal_accent</item>
        <item name="colorControlNormal">@color/white_text</item>
        <item name="colorControlActivated">@color/teal_accent</item>
        <item name="colorControlHighlight">@color/white_text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:editTextStyle">@style/FirebaseUI.EditText</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primaryMedium</item>
    </style>

    <style name="FirebaseUI.EditText">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="FirebaseUI.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@color/teal_accent</item>
    </style>

    <style name="FirebaseUI.Text.BodyText" parent="FirebaseUI.Text.T08">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="FirebaseUI.Text.TextInputLayout" parent="@style/FirebaseUI.Text.BodyText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <style name="FirebaseUI.EditText.EmailField" parent="@style/FirebaseUI.Text.BodyText">
        <item name="android:hint">@string/email_hint</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="FirebaseUI.EditText.PasswordField" parent="@style/FirebaseUI.Text.BodyText">
        <item name="android:hint">@string/password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="FirebaseUI.Text.HintText" parent="@style/FirebaseUI.Text.BodyText" />

</resources>
